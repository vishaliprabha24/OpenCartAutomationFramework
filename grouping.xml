<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite1">

    <groups>
        <run>
            <include name="Sanity"/>
            <include name="Regression"/>
<!--            <include name="Master"/>-->
<!--            <include name="Datadriven"/>-->
        </run>
    </groups>
    <listeners>
        <listener class-name="UtilityFiles.ExtendReportManager"/>
    </listeners>

    <test name="Test1" thread-count="5">
        <parameter name="os" value="Linux"/>
        <parameter name="browser" value="Firefox"/>
        <classes>
             <class name="TestCases.TC001_AccountRegistrationTest"></class>
                        <class name="TestCases.TC002_LoginTest"></class>
<!--            <class name="TestCases.TC003_LoginDDT"></class>-->
        </classes>
    </test>

    <test name="Test2" thread-count="5">
        <parameter name="os" value="Linux"/>
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="TestCases.TC001_AccountRegistrationTest"></class>
            <class name="TestCases.TC002_LoginTest"></class>
            <!--            <class name="TestCases.TC003_LoginDDT"></class>-->
        </classes>
    </test>

</suite>